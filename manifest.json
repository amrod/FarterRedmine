{
  "manifest_version": 2,

  "name": "Faster Redmine",
  "description": "Makes updating Redmine Issues much faster.",
  "version": "1.1",

  "icons": {
    "16": "icons/fast-redmine-16.png",
    "48": "icons/fast-redmine-48.png",
    "128": "icons/fast-redmine-128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "contentSettings",
    "notifications"
  ],

  "optional_permissions": [  
    "http://*/*",
    "https://*/*" 
  ],

  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/fasterredmine.js",
      "scripts/jquery-1.11.2.min.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "browser_action": {
      "default_icon": {                    
        "19": "icons/fast-redmine-19.png",
        "38": "icons/fast-redmine-38.png"
      },
      "default_title": "Faster Redmine"
    }
}
